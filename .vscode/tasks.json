{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build all",
      "type": "process",
      "command": "compile.bat",
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "build test",
      "type": "shell",
      "command": "gfortran",
      "args": [
        "${workspaceFolder}/__sandbox.f08",
        "-o",
        "test.exe"
      ],
      "presentation": {
        "echo": false,
        "focus": true,
        "showReuseMessage": true,
        "clear": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "build current file",
      "command": "gfortran",
      "args": [
        "${file}"
      ],
      "group": "build",
      "presentation": {
        "echo": false,
        "focus": true,
        "showReuseMessage": true,
        "clear": true
      },
      "problemMatcher": []
    }
  ]
}